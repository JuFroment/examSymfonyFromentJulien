{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="text-center my-3">
    <h1>Tous les articles</h1>
    </div>
    <div class="container">
        <div class="row align-items-center">
            {% for article in articles %}
                <div class="col-3">
            <div class="card m-2 align-items-end" style="width: 18rem; ">
                <img src="{{ asset('uploads/' ~ article.image) }}" class="card-img-top" alt="...">
                <div class="card-body align-bottom">
                    <h6 class="card-title text-center text-primary">{{ article.category.libelle|upper }}</h6>
                    <h5 class="card-title"><strong>{{ article.titre }}</strong></h5>
                    <p class="card-text">{{ article.contenu|slice(0, 100) }} ...</p>
                    <div class="text-end">
                        <p><em>Ã©crit par {{ article.user.username }}</em></p>
                    </div>
                    <div class="text-center">
                        <a href="{{ path('app_article_show', {'id': article.id}) }}"><i
                                    class="fa-solid fa-eye text-black fa-xl p-3"></i></a>
                        {% if app.user == article.user %}
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}"><i
                                    class="fas fa-edit fa-xl p-3 text-black"></i></a>
                        {% endif %}
                    </div>
                </div>
            </div>
                </div>
                {% endfor %}
        </div>
    </div>
{% endblock %}
