<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Super Forum</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active btn btn-primary text-white me-3" aria-current="page"
                           href="{{ path('app_article_index') }}">Accueil</a>
                    </li>
                    {% if app.user %}
                    <li>
                        <a href="{{ path('app_article_new') }}" class="btn btn-success me-3">Ajouter un article</a>
                    </li>
                    {% endif %}
                    {% if app.user%}
                        {% if app.user.hasRole('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('app_category_index') }}" class="btn btn-dark">Gestion des catégories</a>
                    </li>
                            {% endif %}
                    {% endif %}

                </ul>
            </div>
            <div class="d-flex justify-content-end align-items-center">
                {% if app.user %}
                    <ul class="navbar-nav">
                        <li class="nav-item me-5">Bonjour {{ app.user.username }}</li>
                    </ul>
                    <a href="{{ path('app_logout') }}" class="btn btn-danger">Se déconnecter</a>
                {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-success">Se connecter</a>
                <a href="{{ path('app_register') }}" class="btn btn-dark ms-3">Créer un compte</a>
                {% endif %}
            </div>
        </div>
    </nav>
</header>