<div class="container">
    {{ form_start(form) }}
    <div class="row">
        <div class="offset-3 col-2">
            {{ form_label(form.date, 'Date', {'label_attr':{'class':'mt-3'}}) }}
        </div>
        <div class="col-4">
            {{ form_widget(form.date, {'attr': {'class': 'form-control mt-3'}} ) }}
        </div>
    </div>
    <div class="row">
        <div class="offset-3 col-2">
            {{ form_label(form.contenu, 'Corps du commentaire', {'label_attr':{'class':'mt-3'}}) }}
        </div>
        <div class="col-4">
            {{ form_widget(form.contenu, {'attr': {'class': 'form-control mt-3'}} ) }}
        </div>
    </div>
    <div class="row">
        <div class="offset-3 col-2">
            {{ form_label(form.user, 'Auteur du commentaire', {'label_attr':{'class':'mt-3'}}) }}
        </div>
        <div class="col-4">
            {{ form_widget(form.user, {'attr': {'class': 'form-control mt-3'}} ) }}
        </div>
    </div>
    <div class="row">
        <div class="offset-3 col-2">
            {{ form_label(form.article, 'Article concern√©', {'label_attr':{'class':'mt-3'}}) }}
        </div>
        <div class="col-4">
            {{ form_widget(form.article, {'attr': {'class': 'form-control mt-3'}} ) }}
        </div>
    </div>
</div>
<div class="text-center my-3">
    <button class="btn btn-success btn-lg">{{ button_label|default('Nouveau commentaire') }}</button>
</div>
{{ form_end(form) }}
</div>